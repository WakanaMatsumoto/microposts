<%= form_for(@user) do |f| %>

  <div class="form-group">
    <%= f.label :name , '名前', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email , 'Email',  class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location, '場所',  class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :location, class: 'form-control', placeholder: "場所を記入"  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :profile, 'プロフィール',  class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :profile, class: "form-control", size: "100x10", placeholder: "プロフィールを記入"  %>
    </div>
  </div>

  <%= f.submit "更新する", class: "btn btn-large btn-primary" %>
<% end %>